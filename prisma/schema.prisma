generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  role      String   @default("USER") // USER, CONTRACTOR, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  projects    Project[]
  contractors Contractor[]

  @@index([clerkId])
  @@index([email])
}

model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  address     String
  status      String    @default("PLANNING") // PLANNING, IN_PROGRESS, COMPLETED, ON_HOLD, CANCELLED
  budget      Float?
  startDate   DateTime?
  endDate     DateTime?
  isPublic    Boolean   @default(false)
  
  // Owner (from Clerk)
  userId      String
  user        User      @relation(fields: [userId], references: [clerkId])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Contractor {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  company   String?
  trades    String[] // Array of trade specialties
  rating    Float?   @default(0)
  
  // Who added this contractor
  userId    String
  user      User     @relation(fields: [userId], references: [clerkId])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([email])
}